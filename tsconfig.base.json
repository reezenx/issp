{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@issp/admin": ["libs/admin/src/index.ts"],
      "@issp/auth": ["libs/auth/src/index.ts"],
      "@issp/common": ["libs/common/src/index.ts"],
      "@issp/common/environments": [
        "libs/common/src/lib/environments/index.ts"
      ],
      "@issp/common/ui/libraries": [
        "libs/common/src/lib/ui/libraries/index.ts"
      ],
      "@issp/common/ui/services": ["libs/common/src/lib/ui/services/index.ts"],
      "@issp/components": ["libs/components/src/index.ts"],
      "@issp/issp": ["libs/issp/src/index.ts"],
      "@issp/user": ["libs/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
